<script>
document.addEventListener('DOMContentLoaded', function() {
    
    // ✅ ATUALIZAR ESTATÍSTICAS
    function atualizarEstatisticas() {
        // Contar elementos visíveis na listagem (aproximação)
        const agendamentos = document.querySelectorAll('[wire\\:click^="visualizarDetalhes"]');
        document.getElementById('total-agendamentos').textContent = agendamentos.length;
        
        // Seria melhor fazer via Livewire, mas esta é uma aproximação
        const pendentes = document.querySelectorAll('.bg-yellow-100').length;
        const confirmados = document.querySelectorAll('.bg-green-100').length;
        
        document.getElementById('pendentes-agendamentos').textContent = pendentes;
        document.getElementById('confirmados-agendamentos').textContent = confirmados;
    }

    // ✅ LISTENER PARA NOTIFICAÇÕES LIVEWIRE
    window.addEventListener('mostrar-notificacao', function(event) {
        mostrarNotificacao(event.detail.tipo, event.detail.mensagem);
    });

    // ✅ FUNÇÃO PARA MOSTRAR NOTIFICAÇÕES
    function mostrarNotificacao(tipo, mensagem) {
        const container = document.getElementById('notification-container');
        
        const cores = {
            'success': 'bg-green-500',
            'error': 'bg-red-500',
            'info': 'bg-blue-500',
            'warning': 'bg-yellow-500'
        };

        const icones = {
            'success': 'fas fa-check-circle',
            'error': 'fas fa-exclamation-circle',
            'info': 'fas fa-info-circle',
            'warning': 'fas fa-exclamation-triangle'
        };

        const notification = document.createElement('div');
        notification.className = `${cores[tipo] || 'bg-gray-500'} text-white px-6 py-4 rounded-lg shadow-lg transform transition-all duration-300 max-w-sm`;
        notification.innerHTML = `
            <div class="flex items-center">
                <i class="${icones[tipo] || 'fas fa-info-circle'} mr-3"></i>
                <span class="font-medium">${mensagem}</span>
                <button onclick="this.parentElement.parentElement.remove()" class="ml-4 text-white hover:text-gray-200">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        `;

        container.appendChild(notification);

        // Auto-remover após 5 segundos
        setTimeout(() => {
            if (notification.parentElement) {
                notification.style.opacity = '0';
                notification.style.transform = 'translateX(100%)';
                setTimeout(() => {
                    if (notification.parentElement) {
                        notification.remove();
                    }
                }, 300);
            }
        }, 5000);
    }

    // ✅ ATUALIZAR ESTATÍSTICAS PERIODICAMENTE
    setInterval(atualizarEstatisticas, 2000);
    
    // ✅ ATUALIZAÇÃO INICIAL
    setTimeout(atualizarEstatisticas, 1000);
});
</script>

